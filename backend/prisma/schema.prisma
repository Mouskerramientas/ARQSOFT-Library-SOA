datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Libro {
  id         Int          @id @default(autoincrement())
  titulo     String
  autor      String
  genero     String
  precio     Float
  stock      Int
  pedidos    Pedido[]
  inventario Inventario[]
}

model User {
  id       Int      @id @default(autoincrement())
  nombre   String
  email    String   @unique
  password String
  telefono String
  direccion String
  role     String   @default("USER")
  pedidos  Pedido[]
}

model Pedido {
  id        Int      @id @default(autoincrement())
  cantidad  Int
  estado    String
  fecha     DateTime @default(now())
  clienteId Int
  libroId   Int
  userId    Int
  libro     Libro    @relation(fields: [libroId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Inventario {
  id      Int    @id @default(autoincrement())
  url     String
  libroId Int
  libro   Libro  @relation(fields: [libroId], references: [id])
}
